<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="{{ 'head.author'|trans }}">
    <meta name="description" content="{{ 'head.description'|trans }}">

    <title>{{ 'head.title'|trans }}</title>

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="{{ app.request.basepath }}/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ app.request.basepath }}/assets/css/jumbotron-narrow.css">
  </head>

  <body>
    <div class="container">
      <div class="header">
        <ul class="nav nav-pills pull-right">
          <li class="active">
            <a href="#">{{ 'menu.home'|trans }}</a>
          </li>
          <li>
            <a href="#">{{ 'menu.about'|trans }}</a>
          </li>
          <li>
            <a href="#">{{ 'menu.contact'|trans }}</a>
          </li>
        </ul>

        <h3 class="text-muted">{{ 'brand_name'|trans }}</h3>
      </div>

      {% block content '' %}

      <div class="footer">
        <p>&copy; {{ 'footer.trademark'|trans({'%date%': date()|date('Y')}) }}</p>
      </div>

    </div>
  </body>
</html>
